---
interface Props {
  link?: string;
  alternative?: boolean;
}

const { link = "/", alternative = false } = Astro.props;
---

<div class="pl-4 flex items-center">
  <a class="no-underline hover:no-underline" href={link}>
    {
      alternative && (
        <div class="text-white font-bold text-2xl lg:text-4xl">
          Your
          <span class="text-black bg-white p-1 m-0 rounded">Car</span>
        </div>
      )
    }

    {
      !alternative && (
        <div class="text-black font-bold text-2xl lg:text-4xl">
          Your
          <span class="text-white bg-black p-1 m-0 rounded">Car</span>
        </div>
      )
    }
  </a>
</div>
