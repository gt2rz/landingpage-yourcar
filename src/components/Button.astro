---
interface Props{
    type?: 'button' | 'submit' | 'reset' | undefined;
}

const { type = 'button' } = Astro.props
---

<button
  type={type}
  class="mx-auto lg:mx-0 bg-black text-white font-bold rounded-lg my-6 py-4 px-8 shadow-lg focus:outline-none focus:shadow-outline transform transition hover:scale-105 duration-300 ease-in-out"
>
  <slot />
</button>
