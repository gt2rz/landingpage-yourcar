---
interface Props{
  link: string;
}

const { link } = Astro.props;
---

<a
  href={link}
  class="mx-auto lg:mx-0 gradient bg-black text-white font-bold rounded-lg my-6 py-4 px-8 shadow-lg focus:outline-none focus:shadow-outline transform transition hover:scale-105 duration-300 ease-in-out"
>
  <slot />
</a>
